<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#00FF00" /> <!-- Green border when pressed -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#0000FF" /> <!-- Blue border when focused -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#000" /> <!-- Black border by default -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
